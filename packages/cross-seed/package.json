{
	"name": "cross-seed",
	"version": "7.0.0-9",
	"description": "Fully-automatic cross-seeding with Torznab",
	"type": "module",
	"bin": {
		"cross-seed": "dist/cmd.js"
	},
	"engines": {
		"node": ">=24"
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "tsc -b tsconfig.json",
		"build:all": "npm run build && npm -C ../.. run build:api-types && npm -C ../.. run build:webui && npm run copy:webui",
		"copy:webui": "rimraf dist/webui && mkdir -p dist && cp -r ../webui/dist dist/webui",
		"watch": "tsc -b --watch --preserveWatchOutput",
		"dev": "node --watch dist/cmd.js daemon",
		"prepublishOnly": "rimraf dist tsconfig.tsbuildinfo && npm -C ../.. run build",
		"prepack": "node ../../scripts/prepare-bundled-deps.js",
		"lint": "concurrently --names \"Prettier,ESLint\" \"prettier --check '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}'\" \"eslint '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}'\"",
		"typecheck": "tsc -b tsconfig.json && tsc -p tsconfig.tests.json",
		"format": "prettier --write '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}' package.json"
	},
	"bundledDependencies": [
		"@cross-seed/shared"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/cross-seed/cross-seed.git"
	},
	"author": "Michael Goodnow",
	"license": "Apache-2.0",
	"dependencies": {
		"@cross-seed/shared": "file:../shared",
		"@fastify/cookie": "^11.0.2",
		"@trpc/server": "^11.8.0",
		"bcryptjs": "^3.0.2",
		"bencode": "^2.0.1",
		"chalk": "^5.0.0",
		"commander": "^8.3.0",
		"fastest-levenshtein": "^1.0.16",
		"fastify": "^5.3.2",
		"knex": "^3.1.0",
		"ms": "^2.1.3",
		"strip-ansi": "^7.1.0",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5",
		"xml2js": "^0.5.0",
		"xmlrpc": "^1.3.2",
		"zod": "^3.22.4"
	},
	"np": {
		"yarn": false
	}
}
