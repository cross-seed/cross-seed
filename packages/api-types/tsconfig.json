{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": [],
		"target": "es2022",
		"lib": ["es2023"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@cross-seed/backend/*": ["../cross-seed/dist/*"]
		}
	},
	"references": [{ "path": "../cross-seed/tsconfig.json" }],
	"include": ["./src/**/*"]
}
