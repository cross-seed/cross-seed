{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"allowJs": true,
		"target": "es2022",
		"lib": ["es2023"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"types": [],
		"composite": true
	},
	"include": ["./src/**/*"],
	"references": [{ "path": "packages/shared/tsconfig.json" }]
}
