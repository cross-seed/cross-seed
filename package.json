{
	"name": "cross-seed-workspace",
	"version": "0.0.0",
	"description": "Cross-seed monorepo workspace",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/cross-seed",
		"packages/shared",
		"packages/webui",
		"packages/api-types",
		"packages/mock-torznab"
	],
	"scripts": {
		"test": "npm --workspaces run test --if-present",
		"coverage": "npm --workspaces run coverage --if-present",
		"build": "npm -w packages/cross-seed run build:all",
		"build:api-types": "npm -w packages/api-types run build",
		"build:webui": "npm -w packages/webui run build",
		"build:all": "npm run build",
		"watch": "npm -w packages/cross-seed run watch",
		"dev": "concurrently --names \"TS,BE,FE\" --prefix-colors \"blue,green,magenta\" \"npm -w packages/cross-seed run watch\" \"node --watch packages/cross-seed/dist/cmd.js daemon\" \"npm -w packages/webui run dev\"",
		"dev:backend": "node --watch packages/cross-seed/dist/cmd.js daemon",
		"dev:frontend": "npm -w packages/webui run dev",
		"prepare": "node -e \"const fs=require('fs'); if(!fs.existsSync('.git')) process.exit(0); require('child_process').execSync('husky install',{stdio:'inherit'})\"",
		"lint": "npm --workspaces run lint --if-present",
		"typecheck": "npm --workspaces run typecheck --if-present",
		"format": "prettier --write . --ignore-path .gitignore",
		"format:check": "prettier --check . --ignore-path .gitignore",
		"release": "node scripts/release.js --"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/bencode": "^2.0.1",
		"@types/ms": "^0.7.34",
		"@types/node": "^24.10.1",
		"@types/xml2js": "^0.4.9",
		"@types/xmlrpc": "^1.3.6",
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"@vitest/coverage-v8": "^3.1.1",
		"concurrently": "^9.1.2",
		"eslint": "^8.56.0",
		"husky": "^7.0.0",
		"lint-staged": "^12.1.4",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^3.0.2",
		"typescript": "^5.6.2",
		"vitest": "^3.1.1"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"proseWrap": "always"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache",
		"*.{js,json,ts,css,md}": "prettier --write"
	}
}
