{
	"name": "cross-seed",
	"version": "6.13.6-2",
	"description": "Fully-automatic cross-seeding with Torznab",
	"scripts": {
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "tsc",
		"build:webui": "cd packages/webui && npm run build",
		"copy:webui": "rimraf dist/webui && cp -r packages/webui/dist dist/webui",
		"build:all": "npm run build:webui && npm run build && npm run copy:webui",
		"watch": "tsc --watch",
		"dev": "concurrently --names \"TS,BE,FE\" --prefix-colors \"blue,green,magenta\" \"npm run watch\" \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "node --watch dist/cmd.js daemon",
		"dev:frontend": "cd packages/webui && npm run dev",
		"prepublishOnly": "rimraf dist && npm run build:all && husky install",
		"lint": "concurrently --names \"Prettier,ESLint,TypeScript\" \"prettier --check '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}'\" \"eslint '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}'\" \"tsc --noEmit\"",
		"format": "prettier --write '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}' package.json"
	},
	"bin": {
		"cross-seed": "dist/cmd.js"
	},
	"engines": {
		"node": ">=22"
	},
	"files": [
		"dist/"
	],
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git://github.com/cross-seed/cross-seed.git"
	},
	"author": "Michael Goodnow",
	"license": "Apache-2.0",
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@trpc/server": "^11.1.2",
		"@types/react": "^19.1.5",
		"bcryptjs": "^3.0.2",
		"bencode": "^2.0.1",
		"better-sqlite3": "^11.5.0",
		"chalk": "^5.0.0",
		"commander": "^8.3.0",
		"fastest-levenshtein": "^1.0.16",
		"fastify": "^5.3.2",
		"knex": "^3.1.0",
		"ms": "^2.1.3",
		"react-error-boundary": "^6.0.0",
		"strip-ansi": "^7.1.0",
		"superjson": "^2.2.2",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5",
		"xml2js": "^0.5.0",
		"xmlrpc": "^1.3.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/bencode": "^2.0.1",
		"@types/lowdb": "^1.0.9",
		"@types/ms": "^0.7.34",
		"@types/node": "^22.15.21",
		"@types/xml2js": "^0.4.9",
		"@types/xmlrpc": "^1.3.6",
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"@vitest/coverage-v8": "^3.1.1",
		"concurrently": "^9.1.2",
		"eslint": "^8.56.0",
		"husky": "^7.0.0",
		"lint-staged": "^12.1.4",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^3.0.2",
		"typescript": "^5.6.2",
		"vitest": "^3.1.1"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"proseWrap": "always"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache",
		"*.{js,json,ts,css,md}": "prettier --write"
	},
	"np": {
		"yarn": false
	}
}
