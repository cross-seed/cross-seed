{
  "name": "cross-seed",
  "version": "6.13.2",
  "description": "Fully-automatic cross-seeding with Torznab",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc",
    "build:webui": "cd packages/webui && npm run build",
    "build:all": "npm run build:webui && npm run build",
    "watch": "tsc --watch",
    "prepublishOnly": "rimraf dist && npm run build:all && husky install",
    "lint": "prettier --check '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}' && eslint '{src,tests}/{**/*,*}.{js,ts,cjs,mjs}'",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "cross-seed": "dist/cmd.js"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist/"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/cross-seed/cross-seed.git"
  },
  "author": "Michael Goodnow",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.1.1",
    "@trpc/server": "^11.1.2",
    "bcryptjs": "^3.0.2",
    "bencode": "^2.0.1",
    "better-sqlite3": "^11.5.0",
    "chalk": "^5.0.0",
    "commander": "^8.3.0",
    "fastest-levenshtein": "^1.0.16",
    "fastify": "^5.3.2",
    "fuse.js": "^6.6.2",
    "knex": "^3.1.0",
    "lodash-es": "^4.17.21",
    "ms": "^2.1.3",
    "strip-ansi": "^7.1.0",
    "superjson": "^2.2.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "xml2js": "^0.5.0",
    "xmlrpc": "^1.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bencode": "^2.0.1",
    "@types/lowdb": "^1.0.9",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.10.6",
    "@types/xml2js": "^0.4.9",
    "@types/xmlrpc": "^1.3.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^8.56.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^3.0.2",
    "typescript": "^5.6.2",
    "vitest": "^3.1.1"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true,
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache",
    "*.{js,json,ts,css,md}": "prettier --write"
  },
  "np": {
    "yarn": false
  }
}
